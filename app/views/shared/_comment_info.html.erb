<div id="comment_<%= comment.id %>">
  <blockquote>
    <p>
      <%= comment.description %>
    </p>
    <small>
      <cite>
        <%= comment.user.name %>, 
        <%= time_ago_in_words(comment.created_at) + " ago" %>
      </cite>
    </small>
    <% if can? :delete, comment %> 
      <%= link_to "Eliminar", book_comment_path(@book, comment), method: :delete, data: {confirm: "¿Estás seguro?"}, remote: true %>
    <% end %>
  </blockquote>
  <br>
</div>